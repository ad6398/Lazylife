<% include ../partials/header %>



<div class="container">
        <div class="row">
            <h1  class="write" style="text-align:center;"> Fill Your details </h1>
            <div style="width:30% ;margin: 0 auto;">
            <form action="/confirmrequest" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="order[placedby]" >
                </div>
                <div class="form-group">
                    <input class="form-control type="number" placeholder="contact" name="order[contact]">  
                </div>
                <div class="form-group">
                    <input class="form-control type="text" value="<%=  laundry.name %> " name="order[placedfor]">
                </div>
