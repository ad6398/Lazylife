                    <input class="form-control type="datetime" placeholder="datetime" name="order[date]" value="<%= dt %>">
                </div>
                <div class="form-group">
                        <button class="btn btn-primary btn-block btn-lg">Submit!!</button>
                </div>
                <input type="hidden" name="name" value="<%= laundry.name %>" >
            </form>
            </div>
        </div>
    </div>



